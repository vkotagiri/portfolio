# Portfolio App Configuration
# Copy this file to .env and fill in your values

DATABASE_URL=sqlite:///./portfolio.db
PORT=8000
ENV=dev
TIMEZONE=America/New_York

# ---- API Keys ----
TIINGO_API_KEY=your_tiingo_api_key
ALPHAVANTAGE_API_KEY=your_alphavantage_key
FRED_API_KEY=your_fred_api_key
OPENAI_API_KEY=your_openai_api_key

# ---- Rate Limiting (optional, defaults shown) ----
TIINGO_HOURLY=50
TIINGO_DAILY=1000
TIINGO_UNIQUE_MONTH=500
TIINGO_RL_MODE=sleep
TIINGO_MAX_SLEEP=120
TIINGO_MAX_TOTAL_SLEEP=900
TIINGO_DEBUG=0
OFFLINE=0

ALPHAVANTAGE_RPM=5
ALPHAVANTAGE_RPD=25
ALPHAVANTAGE_BURST=5

YF_RPM=20
YF_BURST=5

OPENAI_MODEL=gpt-4o-mini

# ---- Email Notifications ----
# For Gmail: use App Password (not your regular password)
# See: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_TO=recipient@example.com
# EMAIL_FROM=  # Optional, defaults to SMTP_USER
# SMTP_USE_TLS=true  # Use STARTTLS (true) or SSL (false)

# Clickable report URL in emails (run: cd reports && python -m http.server 8080)
REPORT_BASE_URL=http://localhost:8080
